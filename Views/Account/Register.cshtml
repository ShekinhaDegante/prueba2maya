@model prueba2maya.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
}

<h2 class="mb-4">Registrarse</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Mensaje de error general -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <form asp-action="Register" asp-controller="Account" method="post" novalidate>
            <!-- Campo: Nombre de Usuario -->
            <div class="form-group">
                <label asp-for="NombreUsuario" class="form-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese un nombre de usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <!-- Campo: Email -->
            <div class="form-group mt-3">
                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Ingrese su correo electrónico" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo: Contraseña -->
            <div class="form-group mt-3">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingrese una contraseña segura" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <!-- Campo: Confirmar Contraseña -->
            <div class="form-group mt-3">
                <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                <input asp-for="ConfirmarContrasena" type="password" class="form-control" placeholder="Confirme la contraseña" />
                <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
            </div>

            <!-- Campo: IdRol (Lista desplegable) -->
            <div class="form-group mt-3">
                <label asp-for="IdRol" class="form-label">Rol</label>
                <select asp-for="IdRol" class="form-control" asp-items="@ViewBag.Roles">
                    <option value="">Seleccione un rol</option>
                </select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>

            <!-- Botón de envío -->
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary w-100">Registrarse</button>
            </div>
        </form>

        <!-- Enlace de retorno al Login -->
        <div class="mt-3 text-center">
            <p>¿Ya tienes una cuenta? <a asp-action="Login" asp-controller="Account">Inicia sesión aquí</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Validación de lado del cliente -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
