@model prueba2maya.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2 class="mb-4">Iniciar Sesión</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Muestra mensaje de error si hay -->
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post" novalidate>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="form-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese su usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" type="password" placeholder="Ingrese su contraseña" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="RememberMe">Recordarme</label>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <p>¿No tienes una cuenta? <a asp-action="Register" asp-controller="Account">Regístrate aquí</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Habilita validaciones de lado del cliente -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
