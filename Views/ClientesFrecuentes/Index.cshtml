@model IEnumerable<prueba2maya.Models.ClientesFrecuente>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="titulo-categoria">Clientes Frecuentes</h1>
        <p class="descripcion-categoria">Aquí puedes gestionar los clientes frecuentes y sus compras.</p>
    </div>

    <!-- Mostrar solo si el usuario es administrador -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="d-flex justify-content-end mb-3">

            <a asp-action="Create" class="btn btn-create">
                <i class="bi bi-plus-circle"></i> Crear Nuevo Cliente Frecuente
            </a>

        </div>
    }

    <table class="table table-striped table-hover tabla-categoria">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TotalCompras)</th>
                <th>@Html.DisplayNameFor(model => model.FechaUltimaCompra)</th>
                <th>@Html.DisplayNameFor(model => model.PuntosAcumulados)</th>
                <th>@Html.DisplayNameFor(model => model.IdClienteNavigation)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TotalCompras)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaUltimaCompra)</td>
                    <td>@Html.DisplayFor(modelItem => item.PuntosAcumulados)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdClienteNavigation.IdUsuario)</td>
                    <td class="text-center">
                        <!-- Mostrar solo si el usuario es administrador -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.IdClienteFrecuente" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdClienteFrecuente" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdClienteFrecuente" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

