@model IEnumerable<prueba2maya.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 style="color: #B5651D; font-family: 'Georgia', serif;">Gestión de Usuarios</h1>
        <p style="color: #8B4513;">Administra los usuarios del sistema con facilidad.</p>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-warning text-white" style="background-color: #FFBF00; border: none;">
            <i class="bi bi-person-plus-fill"></i> Crear Nuevo Usuario
        </a>
    </div>

    <table class="table table-striped table-hover" style="border: 1px solid #D2B48C;">
        <thead class="table-light" style="background-color: #FFF3CD;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Contrasena)</th>
                <th>@Html.DisplayNameFor(model => model.IdRolNavigation)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contrasena)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdRolNavigation.IdRol)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #FFF8E7;
    }

    .btn-outline-warning {
        color: #B5651D;
        border-color: #B5651D;
    }

        .btn-outline-warning:hover {
            background-color: #B5651D;
            color: #FFF;
        }

    .btn-outline-info {
        color: #6C757D;
        border-color: #6C757D;
    }

        .btn-outline-info:hover {
            background-color: #6C757D;
            color: #FFF;
        }

    .btn-outline-danger {
        color: #8B0000;
        border-color: #8B0000;
    }

        .btn-outline-danger:hover {
            background-color: #8B0000;
            color: #FFF;
        }
</style>
