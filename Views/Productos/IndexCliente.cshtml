@model IEnumerable<prueba2maya.Models.Producto>

@{
    ViewData["Title"] = "Catálogo de Productos - Usuario";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="titulo-categoria">Catálogo de Productos</h1>
        <p class="descripcion-categoria">Explora nuestra amplia gama de productos disponibles para ti.</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                <div class="card h-100 shadow-sm p-2">
                    <img src="@item.ImagenUrl" class="card-img-top" alt="@item.NombreProducto" style="max-height: 150px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate">@item.NombreProducto</h6>
                        <p class="card-text text-muted small">@item.Descripcion</p>
                        <p class="card-text text-primary fw-bold">Precio: $@(item.Precio.HasValue ? item.Precio.Value.ToString("") : "No disponible")</p>

                        <p class="card-text small">Disponibles: @item.CantidadDisponible</p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-primary btn-sm">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
