@model IEnumerable<prueba2maya.Models.DetallePedidosProveedore>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1>Detalles de Pedidos a Proveedores</h1>
        <p>Aquí puedes gestionar los detalles de los pedidos a proveedores.</p>
    </div>

    <!-- Mostrar solo si el usuario es administrador -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-create">
                <i class="bi bi-plus-circle"></i> Crear Nuevo Detalle
            </a>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CantidadSolicitada)</th>
                <th>@Html.DisplayNameFor(model => model.PrecioUnitario)</th>
                <th>@Html.DisplayNameFor(model => model.IdPedidoProveedorNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdProductoNavigation)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CantidadSolicitada)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrecioUnitario)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdPedidoProveedorNavigation.IdPedidoProveedor)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)</td>
                    <td class="text-center">
                        <!-- Mostrar los botones de acción solo si el usuario es administrador -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.IdDetallePedidoProveedor" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdDetallePedidoProveedor" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdDetallePedidoProveedor" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
