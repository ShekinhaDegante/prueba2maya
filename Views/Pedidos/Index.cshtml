@model IEnumerable<prueba2maya.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="titulo-pedido">Pedidos</h1>
        <p class="descripcion-pedido">Aquí puedes gestionar los pedidos realizados.</p>
    </div>

    <!-- Mostrar solo si el usuario es administrador -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-warning text-white btn-crear-pedido">
                <i class="bi bi-cart-plus"></i> Crear Nuevo Pedido
            </a>
        </div>
    }

    <table class="table table-striped table-hover tabla-pedido">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaPedido)</th>
                <th>@Html.DisplayNameFor(model => model.Total)</th>
                <th>@Html.DisplayNameFor(model => model.MetodoEntrega)</th>
                <th>@Html.DisplayNameFor(model => model.DireccionEntrega)</th>
                <th>@Html.DisplayNameFor(model => model.IdSucursalNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdUsuarioNavigation)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaPedido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                    <td>@Html.DisplayFor(modelItem => item.MetodoEntrega)</td>
                    <td>@Html.DisplayFor(modelItem => item.DireccionEntrega)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdSucursalNavigation.IdSucursal)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdUsuarioNavigation.IdUsuario)</td>
                    <td class="text-center">
                        <!-- Mostrar los botones de acción solo si el usuario es administrador -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>