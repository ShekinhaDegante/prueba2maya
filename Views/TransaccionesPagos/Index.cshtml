@model IEnumerable<prueba2maya.Models.TransaccionesPago>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1>Transacciones</h1>
        <p>Aquí puedes gestionar las transacciones de pago.</p>
    </div>

    <!-- Mostrar solo si el usuario es administrador -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-create">
                <i class="bi bi-plus-circle"></i> Crear Nueva Transaccion
            </a>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Monto)</th>
                <th>@Html.DisplayNameFor(model => model.FechaTransaccion)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.IdModoPagoNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdPedidoNavigation)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaTransaccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdModoPagoNavigation.IdModoPago)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdPedido)</td>
                    <td class="text-center">
                        <!-- Mostrar los botones de acción solo si el usuario es administrador -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.IdTransaccion" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdTransaccion" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdTransaccion" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
