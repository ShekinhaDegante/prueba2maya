@model IEnumerable<prueba2maya.Models.TransaccionesPago>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Mostrar solo si el usuario es administrador -->
@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaTransaccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdModoPagoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPedidoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaTransaccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdModoPagoNavigation.IdModoPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdPedido)
                </td>
                <td>
                    <!-- Mostrar los botones de acción solo si el usuario es administrador -->
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdTransaccion">Edit</a>
 
                    <a asp-action="Details" asp-route-id="@item.IdTransaccion"> Details </a> 
                    <a asp-action="Delete" asp-route-id="@item.IdTransaccion"> Delete </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
