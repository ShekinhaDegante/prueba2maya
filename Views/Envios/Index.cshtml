@model IEnumerable<prueba2maya.Models.Envio>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1>Envíos</h1>
        <p>Aquí puedes gestionar los envíos realizados.</p>
    </div>

    <!-- Mostrar solo si el usuario es administrador -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="d-flex justify-content-end mb-3">
             <a asp-action="Create" class="btn btn-create">
                <i class="bi bi-plus-circle"></i> Crear Nuevo Envio
            </a>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DireccionEnvio)</th>
                <th>@Html.DisplayNameFor(model => model.EstadoEnvio)</th>
                <th>@Html.DisplayNameFor(model => model.FechaEnvio)</th>
                <th>@Html.DisplayNameFor(model => model.FechaEntrega)</th>
                <th>@Html.DisplayNameFor(model => model.IdPedidoNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdSucursalRetiroNavigation)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DireccionEnvio)</td>
                    <td>@Html.DisplayFor(modelItem => item.EstadoEnvio)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEnvio)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEntrega)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdPedido)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdSucursalRetiroNavigation.IdSucursal)</td>
                    <td class="text-center">
                        <!-- Mostrar los botones de acción solo si el usuario es administrador -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.IdEnvio" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdEnvio" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdEnvio" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
